<header class="header-edit-ctg">
    <h2>
        <span id="edit-header"><i class='bx bxs-edit-alt'></i><%= data.postTitle %></span>
    </h2>
    <a href="/dashboard">
        <span class="back-btn"><i class='bx bx-arrow-back' ></i> Back</span>
    </a>
</header>
<div class="category-controler">
    <form id="edit-form" action="/edit-post/<%= data._id %>?_method=PUT" method="post">
        <label for="posttitle">Nome da categoria: </label>
        <input type="text" placeholder="Categoria" name="posttitle" value="<%= data.postTitle %>">
        <label for="description">Descrição: </label>
        <textarea type="text" placeholder="Conteúdo" rows="10" name="description"><%= data.description%></textarea>
        <label for="content">Conteúdo: </label>
        <textarea type="text" placeholder="Conteúdo" rows="10" name="content"><%= data.content %></textarea>
        <label for="img">File: </label>
        <input type="text" name="img" id="file" value="<%= data.image %>">
        <label for="category">Categoria</label>
        <select name="category" id="category">
            <% category.forEach(category => { %>
                <option value="<%= category._id %>"><%= category.name %></option>
            <% }) %>
        </select>
        <label for="index">Tags de pesquisas: </label>
        <textarea type="text" placeholder="Tags de pesquisas" rows="10" name="index"><%= data.index %></textarea>
        <input class="btn" type="submit" value="Update">
    </form>
    <form id="del-form" action="/delete-post/<%= data._id %>?_method=DELETE" method="post">
        <input class="btn" type="submit" value="Delete">
    </form>
</div>